<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FDDA2"
    android:weightSum="1"
    >


    <ScrollView
        android:layout_weight="0.10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:padding="5dp"
                android:background="@drawable/btn_bg_style"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Spinner

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                        </Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/allques"
                            android:textAlignment="center"
                            android:drawableLeft="@drawable/wrong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="All Questions"
                            android:textColor="#000"

                            />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/btn_bg_style"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:background="@drawable/btn_bg_style"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="11/5"
                            android:textColor="#E60E0E"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/btn_bg_style"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+123"
                            android:textColor="#C71C1C"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:background="@drawable/btn_bg_style"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.33"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Any Doubt"
                            android:drawableRight="@drawable/wrong"
                            android:textColor="#000"

                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/btn_bg_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/quebackre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/btn_bg_style"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <WebView

                    android:id="@+id/webque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    >
                </WebView>

                    <!--<WebView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Question: Consider the following\n hi hello hi helo hi \n ilu ilu ilu ilu"-->

                        <!--android:textColor="#000"-->

                        <!--/>-->
                </LinearLayout>
            </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/btn_bg_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:orientation="vertical"
                        android:background="@drawable/btn_bg_style"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/ansss1"
                            android:text="A)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            />
                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/optxt1"
                                android:textSize="14dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="35dp"
                                android:layout_height="15dp" />
                        <ImageView
                            android:id="@+id/opt1"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        </LinearLayout>
                    </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout

                        android:background="@drawable/btn_bg_style"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/ansss2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="B)"
                            android:textColor="#000"
                            />
                            <LinearLayout
                                android:gravity="right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="16dp"
                                    android:layout_marginBottom="10dp"
                                    android:id="@+id/optxt2"
                                    android:layout_width="35dp"
                                    android:layout_height="15dp"  />
                                <ImageView
                                    android:id="@+id/opt2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout

                        android:background="@drawable/btn_bg_style"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/ansss3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="C)"
                            android:textColor="#000"
                            />
                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="16dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/optxt3"
                                android:layout_width="35dp"
                                android:layout_height="15dp"  />
                            <ImageView
                                android:id="@+id/opt3"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                        </LinearLayout>
                    </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout

                        android:background="@drawable/btn_bg_style"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="D) "
                            android:id="@+id/ansss4"
                            android:textColor="#000"
                            />
                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="16dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/optxt4"
                                android:layout_width="35dp"
                                android:layout_height="15dp" />
                            <ImageView

                                android:id="@+id/opt4"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                        </LinearLayout>
                    </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/btn_bg_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/btn_bg_style"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/edit1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#E60E0E"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/btn_bg_style"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/edit2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#C71C1C"

                            />
                    </LinearLayout>




                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/btn_bg_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="@drawable/btn_bg_style"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:background="@drawable/btn_bg_style"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Solution"
                            android:textSize="25dp"
                            android:textColor="#E21111"

                            />
                    </LinearLayout>


                    <LinearLayout
                        android:background="@drawable/btn_bg_style"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/soledit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="25dp"
                            android:textColor="#000"

                            />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:weightSum="3"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_weight="0.90"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#E90E0E">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/previous"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Previous"
                android:textSize="20dp"
                android:textColor="#fff"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/bookmark"
                app:srcCompat="@drawable/ic_bookmark_black_24dp"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:textColor="#fff"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/next"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="20dp"
                android:textColor="#fff"
                />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>