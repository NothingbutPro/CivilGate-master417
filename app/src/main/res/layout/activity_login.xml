<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="35dp"
    android:layout_marginLeft="@dimen/login_page_margin"
    android:layout_marginRight="@dimen/login_page_margin"

    >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_page_text"
        android:textColor="@color/app_bar_color"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_page_text1"
        android:textColor="@color/app_bar_color"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="80dp" />
</LinearLayout>

    <LinearLayout
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/login_page_margin1"
        android:layout_marginLeft="@dimen/login_page_margin1"
        android:layout_marginBottom="10dp"
        >


        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:padding="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

           <ImageView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.9"
               android:layout_gravity="start|center"
               app:srcCompat="@drawable/email_icon"/>

    <EditText
        android:text="p@gmail.com"
        android:background="#fff"
        android:id="@+id/emailfx"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="138dp" />

            </LinearLayout>
        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:padding="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                app:srcCompat="@drawable/password_icon"/>

            <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/etPasswordLayout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:passwordToggleEnabled="true">-->
    <EditText
        android:text="123456"
        android:id="@+id/passwordtxt"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:background="#fff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="214dp" />
            <!--</android.support.design.widget.TextInputLayout>-->
            </LinearLayout>
        </android.support.design.card.MaterialCardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/login_page_margin"
        android:layout_marginRight="@dimen/login_page_margin"

        >
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:textColor="@color/menu_item_text_color"
            android:layout_gravity="right"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="41dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/login_page_margin"
        android:layout_marginLeft="@dimen/login_page_margin"
        >

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            >
    <Button
        android:id="@+id/button_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        tools:layout_editor_absoluteX="16dp"
        android:background="@color/app_bar_color"
        tools:layout_editor_absoluteY="341dp" />

        </android.support.design.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/login_page_margin"
        android:layout_marginRight="@dimen/login_page_margin"

        >
        <TextView
            android:id="@+id/textVie5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_page_reg_text"
            android:textColor="@color/menu_item_text_color"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="41dp" />
        <TextView
            android:id="@+id/new_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_page_reg_text1"
            android:textColor="@color/app_bar_color"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="41dp" />
    </LinearLayout>



</LinearLayout>