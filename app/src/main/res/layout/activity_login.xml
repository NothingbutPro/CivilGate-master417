    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_page_margin"
        android:layout_marginTop="35dp"
        android:layout_marginRight="@dimen/login_page_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_page_text"
            android:typeface="serif"
            android:layout_marginBottom="5dp"
            android:textColor="@color/app_bar_color"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="41dp" />

        <TextView
            android:id="@+id/textView3"
            android:typeface="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_page_text1"
            android:textColor="@color/app_bar_color"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_page_margin1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/login_page_margin1"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="7dp">


        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_weight="0.9"
                    app:srcCompat="@drawable/email_icon" />

                <EditText
                    android:id="@+id/emailfx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#fff"
                    android:hint="Email"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:inputType="textEmailAddress"
                    android:text="p@gmail.com"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="138dp" />

            </LinearLayout>
        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="15dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.9"
                    app:srcCompat="@drawable/password_icon" />

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/etPasswordLayout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:passwordToggleEnabled="true">-->
                <EditText
                    android:id="@+id/passwordtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="#fff"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:text="123456"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="214dp" />
                <!--</android.support.design.widget.TextInputLayout>-->
            </LinearLayout>
        </android.support.design.card.MaterialCardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_page_margin"
        android:layout_marginRight="@dimen/login_page_margin"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Forgot Password ?"
            android:textColor="@color/menu_item_text_color"
            android:textSize="14dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="41dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_page_margin"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/login_page_margin"
        android:orientation="vertical">

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/button_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_bar_color"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#FAFAFA"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="341dp" />

        </android.support.design.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_page_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/login_page_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVie5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/login_page_reg_text"
            android:textColor="@color/menu_item_text_color"
            android:textSize="14dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="41dp" />

        <TextView
            android:id="@+id/new_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/login_page_reg_text1"
            android:textColor="@color/app_bar_color"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="41dp" />
    </LinearLayout>


</LinearLayout>