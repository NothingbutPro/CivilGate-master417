<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.card.MaterialCardView
        android:id="@+id/test_mat"
        android:elevation="5dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/btn_bg_style"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <TextView

        android:layout_weight="0.30"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
            <LinearLayout
                android:padding="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        android:id="@+id/testname"
        android:layout_weight="1.7"
        android:layout_width="wrap_content"
        android:layout_height="25dp" />
                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button
                    android:textColor="#ffff"
                    android:background="#02bbca"
                    android:text="Open"
                    android:textAlignment="center"
                    android:id="@+id/teststatus"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />
                </android.support.v7.widget.CardView>
    <!--<TextView-->

        <!--android:textAlignment="textEnd"-->
        <!--android:id="@+id/testlenth"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/test_start_date"
                    android:layout_weight="0.30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/test_end_date"
                    android:layout_weight="0.30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/testtime"
                    android:layout_weight="0.30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>
    </android.support.design.card.MaterialCardView>
</LinearLayout>