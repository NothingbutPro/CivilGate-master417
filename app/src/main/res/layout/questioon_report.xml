<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <android.support.v7.widget.CardView
                    android:background="@drawable/btn_bg_style"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/btn_bg_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.5"
                           android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Question No. 1"
                            android:textSize="20dp"
                            android:textColor="#000"
                            />
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/wtfidid"
                                android:layout_weight="1"
                                android:textStyle="bold|italic"
                                android:textAllCaps="true"
                                android:text="You Answered this Question "
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/btn_bg_style"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <TextView
                                android:background="@drawable/btn_bg_style"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Your Answer"
                                android:textSize="15dp"
                                android:textColor="#555151"
                                />
                            <TextView
                                android:id="@+id/maans"
                                android:background="@drawable/btn_bg_style"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="a"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:textSize="15dp"
                                android:textColor="#555151"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/btn_bg_style"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <TextView
                                android:background="@drawable/btn_bg_style"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Correct Answer"
                                android:textSize="15dp"
                                android:textColor="#555151"
                                />
                            <TextView
                                android:id="@+id/theirass"
                                android:background="@drawable/btn_bg_style"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="c"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:textSize="15dp"
                                android:textColor="#555151"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@drawable/btn_bg_style"
                                android:weightSum="1">


                                <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Your Score"
                                    android:textSize="13dp"
                                    android:textAlignment="center"
                                    android:textColor="#555151"
                                    />
                                <TextView
                                    android:id="@+id/myscoreass"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="11"
                                    android:textAlignment="center"
                                    android:textSize="13dp"
                                    android:textColor="#555151"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:background="@drawable/btn_bg_style"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="1">


                                <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Your Time"
                                    android:textAlignment="center"
                                    android:textSize="13dp"
                                    android:textColor="#555151"
                                    />
                                <TextView
                                    android:id="@+id/matime"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="00:26 mins"
                                    android:textAlignment="center"
                                    android:textSize="13dp"
                                    android:textColor="#555151"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:background="@drawable/btn_bg_style"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="1">


                                <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Topper's Time"
                                    android:textAlignment="center"
                                    android:textSize="13dp"
                                    android:textColor="#555151"
                                    />
                                <TextView
                                    android:id="@+id/topass"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="00:52 mins"
                                    android:textAlignment="center"
                                    android:textSize="13dp"
                                    android:textColor="#555151"
                                    />
                            </LinearLayout>


                        </LinearLayout>
                        <android.support.v7.widget.CardView
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:weightSum="3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">




                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>





        </LinearLayout>
    </ScrollView>
</LinearLayout>