<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Critical_Thinking"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:text="Critical Section"
                android:textColor="#fff"
                android:textSize="20dp"
                android:typeface="serif" >


            </TextView>

            <!--<TextView-->

                <!--android:textSize="20dp"-->
                <!--android:textStyle="bold"-->
                <!--android:textAllCaps="true"-->
                <!--android:id="@+id/credit"-->
                <!--android:drawableRight="@drawable/moneyboxfilled30"-->
                <!--android:layout_weight="1"-->
                <!--android:textColor="#fff"-->
                <!--android:text="sdfsdf"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="45dp" />-->
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/btn_bg_style"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:textAllCaps="true"
                android:text="Are you a critical thinker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Here you have to submit your question then we will approve if your question is valid for others.
                \n Thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@drawable/btn_bg_style"
            android:layout_height="wrap_content">
            <EditText
               android:maxLines="20"
                android:id="@+id/quemy"
                android:hint="My Question"
                android:padding="4dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </EditText>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:background="@drawable/btn_bg_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/an1"
                android:hint="Answer Option 1"
                android:padding="4dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:background="@drawable/btn_bg_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/an2"
                android:hint="Answer Option 2"
                android:padding="4dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:background="@drawable/btn_bg_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/an3"
                android:hint="Answer Option 3"
                android:padding="4dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </EditText>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:background="@drawable/btn_bg_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/an4"
                android:hint="Answer Option 4"
                android:padding="4dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:background="@drawable/btn_bg_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="number"
                android:id="@+id/correctan"
                android:hint="Correct Answer"
                android:padding="4dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </EditText>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:background="@drawable/btn_bg_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/correctdis"
                android:maxLines="10"
                android:hint="Correct Answer Description"
                android:padding="4dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </EditText>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:drawableRight="@drawable/approval141"
            android:id="@+id/posmath"
            android:textColor="#fff"
            android:background="@color/orange_salmon"
            android:textStyle="italic|bold"
            android:textAllCaps="true"
            android:text="Test My Thinking"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
</ScrollView>