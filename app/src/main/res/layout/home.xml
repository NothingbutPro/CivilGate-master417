<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/dasboard_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/reel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ViewFlipper
                        android:id="@+id/viewflipper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoStart="true"
                        android:flipInterval="3000">


                        <!--<ImageView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/screen" />-->

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmmmm" />
                    </ViewFlipper>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reel1"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reel1"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <android.support.v7.widget.CardView
                        android:id="@+id/buyicon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mainmenu_cardview_margin"
                        android:layout_weight="0.25"
                        android:padding="@dimen/mainmenu_cardview_paddin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reel1"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/mainpage_cardview_icon_size"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                app:srcCompat="@drawable/buy_package_icon" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Buy Package"
                                android:textAlignment="center"
                                android:textSize="@dimen/mainpage_cardview_textsize" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mainmenu_cardview_margin"
                        android:layout_weight="0.25"
                        android:padding="@dimen/mainmenu_cardview_paddin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reel1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/leve_id"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/mainpage_cardview_icon_size"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                app:srcCompat="@drawable/level" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Level"
                                android:textAlignment="center"
                                android:textSize="@dimen/mainpage_cardview_textsize" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mainmenu_cardview_margin"
                        android:layout_weight="0.25"
                        android:padding="@dimen/mainmenu_cardview_paddin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reel1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/mainpage_cardview_icon_size"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                app:srcCompat="@drawable/report_icon" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Reports"
                                android:textAlignment="center"
                                android:textSize="@dimen/mainpage_cardview_textsize" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mainmenu_cardview_margin"
                        android:layout_weight="0.25"
                        android:padding="@dimen/mainmenu_cardview_paddin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reel1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/mainpage_cardview_icon_size"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                app:srcCompat="@drawable/profile_icon" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Profile"
                                android:textAlignment="center"
                                android:textSize="@dimen/mainpage_cardview_textsize" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reel1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mainmenu_cardview_margin"
                        android:layout_weight="0.25"
                        android:padding="@dimen/mainmenu_cardview_paddin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reel1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/mainpage_cardview_icon_size"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                app:srcCompat="@drawable/news_icon" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="News"
                                android:textAlignment="center"
                                android:textSize="@dimen/mainpage_cardview_textsize" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mainmenu_cardview_margin"
                        android:layout_weight="0.25"
                        android:padding="@dimen/mainmenu_cardview_paddin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reel1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/mainpage_cardview_icon_size"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                app:srcCompat="@drawable/notification_icon" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Notification"
                                android:textAlignment="center"
                                android:textSize="@dimen/mainpage_cardview_textsize" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mainmenu_cardview_margin"
                        android:layout_weight="0.25"
                        android:padding="@dimen/mainmenu_cardview_paddin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reel1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/mainpage_cardview_icon_size"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                app:srcCompat="@drawable/ask_exp" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Ask An Expert"
                                android:textAlignment="center"
                                android:textSize="@dimen/mainpage_cardview_textsize" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mainmenu_cardview_margin"
                        android:layout_weight="0.25"
                        android:padding="@dimen/mainmenu_cardview_paddin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reel1"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/mainpage_cardview_icon_size"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                app:srcCompat="@drawable/bookmark_icon" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:text="Bookmark"
                                android:textAlignment="center"
                                android:textSize="@dimen/mainpage_cardview_textsize" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reel1"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:typeface="normal"
                    android:text="Top Package"
                    android:textColor="#fff"
                    android:textSize="16dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reel1"
                android:orientation="vertical"
                android:weightSum="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/mainmenu_cardview_margin"
                    android:padding="@dimen/mainmenu_cardview_paddin">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="@dimen/mainmenu_cardview_paddin"
                        android:paddingBottom="@dimen/login_page_margin1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/reel1"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/face_clip" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/login_page_margin1"
                                android:layout_marginBottom="@dimen/login_page_margin1"
                                android:text="@string/home_page_cardview_offer"
                                android:textAlignment="textStart" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reel1"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:textStyle="normal"
                    android:typeface="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Activie Test"
                    android:textColor="#fff"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/reel1"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/mainmenu_cardview_margin"
                    android:padding="@dimen/mainmenu_cardview_paddin"
                    android:paddingBottom="@dimen/login_page_margin1">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/givenrecyl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"></android.support.v7.widget.RecyclerView>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</ScrollView>