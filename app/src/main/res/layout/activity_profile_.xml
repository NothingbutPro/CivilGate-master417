<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Profile_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView

            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="Profile"
            android:textColor="#fff"
            android:textSize="20dp"
            android:typeface="serif" >


        </TextView>

        <TextView

            android:textSize="20dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:id="@+id/credit"
            android:drawableRight="@drawable/moneyboxfilled30"
            android:layout_weight="1"
            android:textColor="#fff"
            android:text="sdfsdf"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="30dp"
                            android:visibility="visible" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/icons8user96"
                            app:civ_border_color="#000"
                            app:civ_border_width="1dp" />


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.daimajia.numberprogressbar.NumberProgressBar
                        android:padding="4dp"
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        app:progress_current="0"
                        app:progress_max="100"
                        app:progress_text_color="#000"
                        app:progress_text_offset="1dp"
                        app:progress_text_size="17sp"
                        app:progress_text_visibility="visible"
                        app:progress_unreached_color="#CCCCCC" />
                <LinearLayout
                  android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <LinearLayout
                       android:background="@android:color/holo_red_light"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                    </LinearLayout>

                    <LinearLayout
                        android:background="@android:color/holo_orange_light"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </LinearLayout>

                    <LinearLayout
                        android:background="@android:color/holo_green_light"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </LinearLayout>

                </LinearLayout>

                </RelativeLayout>

                        <!--<ProgressBar-->
                            <!--android:id="@+id/progress_bar"-->
                            <!--style="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="4dp"-->
                            <!--android:indeterminate="false"-->
                            <!--android:progress="0"-->
                            <!--android:max="100"/>-->

                        <TextView
                            android:id="@+id/pronamemn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Mr Ram Sharma"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:typeface="serif" />

                        <TextView
                            android:textStyle="bold|italic"
                            android:id="@+id/mainid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="You are in  Basic"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:typeface="serif" />

                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:weightSum="4">


                            <TextView
                                android:padding="9dp"
                                android:layout_margin="4dp"
                                android:text="Mobile :"
                                android:textStyle="bold"
                                android:id="@+id/mobilefx"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:padding="5dp"
                                android:layout_margin="4dp"
                                android:text="Email :"
                                android:textStyle="bold"
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:padding="5dp"
                                android:layout_margin="4dp"
                                android:text="Your Pass Out Year:"
                                android:textStyle="bold"
                                android:id="@+id/passout_year"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:padding="5dp"
                                android:layout_margin="4dp"
                                android:text="Your Address:"
                                android:textStyle="bold"
                                android:id="@+id/addresspx"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                </LinearLayout>



        </ScrollView>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/moreedit"
            app:srcCompat="@drawable/ic_mode_edit_black_24dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>