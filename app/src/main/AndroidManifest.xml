<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.raghav.civilgate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/logoimg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoimg"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.HisHistoryActivity"></activity>
        <activity android:name=".Activities.Profile_Activity" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".Activities.ShowAllPakages" />
        <activity android:name=".Instant_Report.Instant_Results_Activity" />
        <activity android:name=".Activities.Results_Activity" />
        <activity
            android:name=".MAin_test_collpase"
            android:label="@string/title_activity_main_test_collpase"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Test_Activities.Main_Test_Activity"
            android:label="@string/title_activity_main__test_" />
        <activity
            android:name=".Activities.Level_Tab_Activities"
            android:label="@string/title_activity_level__tab__activities"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.About_all" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.RegisterActivity" />
    </application>

</manifest>